<?php
use Ise\Bread\Router\Http\Bread;
?>
<h1 class="page-header">
    Browsing <?php echo $entityTitle, substr($entityTitle, -1, 1) !== 's' ? 's' : null ?>
    <?php if ($this->isGranted($this->basePermission . '.' . Bread::ACTION_CREATE)): ?>
    <a class="btn btn-primary pull-right" role="button" title="Add New"
       href="<?php echo $this->url($this->indexRoute . '/' . Bread::ACTION_CREATE) ?>">
        <span class="glyphicon glyphicon-plus"></span>
    </a>
    <?php endif ?>
</h1>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Last Modified</th>
            <th>Created</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <?php
        if ($this->isGranted($this->basePermission)): 
            foreach ($list as $entity):
                if (!$this->isGranted($this->basePermission, $entity)) {
                    continue;
                }
            ?>
            <tr<?php echo $entity->isDisabled() ? ' class="danger"' : null ?>>
                <td><?php echo $this->escapeHtml($entity->getId()) ?></td>
                <td><?php echo $this->escapeHtml($entity->getName()) ?></td>
                <td><?php echo $this->escapeHtml($entity->getDescription()) ?></td>
                <td><?php echo $this->time($entity->getLastModified()) ?></td>
                <td><?php echo $this->time($entity->getCreated()) ?></td>
                <td>
                    <?php if ($entity->isDisabled()): ?>
                        <?php if ($this->isGranted($this->basePermission . '.' . Bread::ACTION_ENABLE, $entity)): ?>
                    <a class="btn btn-success" role="button" title="Enable"
                       href="<?php echo $this->url($this->indexRoute . '/' . Bread::ACTION_ENABLE, ['id' => $entity->getId()]) ?>">
                        <span class="glyphicon glyphicon-off"></span>
                    </a>
                        <?php endif ?>
                    <?php else: ?>
                    <div class="btn-group" role="group" aria-label="Actions">
                        <a class="btn btn-primary" role="button" title="View"
                           href="<?php echo $this->url($this->indexRoute . '/' . Bread::ACTION_READ, ['id' => $entity->getId()]) ?>">
                            <span class="glyphicon glyphicon-eye-open"></span>
                        </a>
                        <?php if ($this->isGranted($this->basePermission . '.' . Bread::ACTION_UPDATE, $entity)): ?>
                            <a class="btn btn-info" role="button" title="Edit"
                               href="<?php echo $this->url($this->indexRoute . '/' . Bread::ACTION_UPDATE, ['id' => $entity->getId()]) ?>">
                                <span class="glyphicon glyphicon-pencil"></span>
                            </a>
                        <?php endif ?>
                        <?php if ($this->isGranted($this->basePermission . '.' . Bread::ACTION_DELETE, $entity)): ?>
                        <a class="btn btn-danger" role="button" title="Delete"
                           href="<?php echo $this->url($this->indexRoute . '/' . Bread::ACTION_DELETE, ['id' => $entity->getId()]) ?>">
                            <span class="glyphicon glyphicon-trash"></span>
                        </a>
                        <?php endif ?>
                        <?php if ($this->isGranted($this->basePermission . '.' . Bread::ACTION_DISABLE, $entity)): ?>
                        <a class="btn btn-warning" role="button" title="Disable"
                           href="<?php echo $this->url($this->indexRoute . '/' . Bread::ACTION_DISABLE, ['id' => $entity->getId()]) ?>">
                            <span class="glyphicon glyphicon-off"></span>
                        </a>
                        <?php endif ?>
                    </div>
                    <?php endif ?>
                </td>
            </tr>
            <?php
            endforeach;
        endif;
        ?>
    </tbody>
</table>